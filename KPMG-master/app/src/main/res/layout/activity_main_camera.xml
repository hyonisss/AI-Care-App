<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity_Camera">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity ="center"
        android:fillViewport="true"
        android:layout_marginTop="0dp"
        android:id="@+id/scrollView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <ImageView
                android:id="@+id/Medicine_image"
                android:layout_width="293dp"
                android:layout_height="215dp"
                android:layout_marginLeft="44dp"
                tools:layout_marginTop="5dp"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <TextView
                android:id="@+id/Medicine_name"
                android:layout_width="193dp"
                android:layout_height="40dp"
                android:layout_marginLeft="90dp"

                android:layout_marginTop="24dp"
                android:layout_marginBottom="15dp"
                android:text="제품 기본 정보"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="24sp" />

            <View

                android:layout_width="302dp"
                android:layout_height="1dp"
                android:layout_marginLeft="35dp"
                android:background="#999797" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginLeft="35dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="#999797" />


                <TextView
                    android:id="@+id/Pharmacy"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:padding="5dp"
                    android:text="제품명" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:background="#999797" />

                <TextView
                    android:id="@+id/Name_View"
                    android:layout_width="185dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="#999797" />


            </LinearLayout>


            <View

                android:layout_width="302dp"
                android:layout_height="1dp"
                android:layout_marginLeft="35dp"
                android:background="#999797" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginLeft="35dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="#999797" />

                <TextView
                    android:id="@+id/Ingredient"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:padding="5dp"
                    android:text="성분정보" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:background="#999797" />

                <TextView
                    android:id="@+id/Ingredient_View"
                    android:layout_width="185dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="#999797" />


            </LinearLayout>

            <View

                android:layout_width="302dp"
                android:layout_height="1dp"
                android:layout_marginLeft="35dp"
                android:background="#999797" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginLeft="35dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="#999797" />

                <TextView
                    android:id="@+id/ATC"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:padding="5dp"
                    android:text="ATC코드" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:background="#999797" />

                <TextView
                    android:id="@+id/ATC_View"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:padding="5dp"
                    android:text="" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="#999797" />


            </LinearLayout>

            <View

                android:layout_width="302dp"
                android:layout_height="1dp"
                android:layout_marginLeft="35dp"
                android:background="#999797" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginLeft="35dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="#999797" />

                <TextView
                    android:id="@+id/Inject"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:padding="5dp"
                    android:text="투여경로" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:background="#999797" />

                <TextView
                    android:padding="5dp"
                    android:id="@+id/Inject_View"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="#999797" />


            </LinearLayout>

            <View

                android:layout_width="302dp"
                android:layout_height="1dp"
                android:layout_marginLeft="35dp"
                android:background="#999797" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginLeft="35dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="#999797" />

                <TextView
                    android:id="@+id/Insurance"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:padding="5dp"
                    android:text="보험정보" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:background="#999797" />

                <TextView
                    android:padding="5dp"
                    android:id="@+id/Insurance_View"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="#999797" />


            </LinearLayout>

            <View

                android:layout_width="302dp"
                android:layout_height="1dp"
                android:layout_marginLeft="35dp"
                android:background="#999797" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/retry_button"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:onClick="showCameraBtn"
                    android:text="다시 찾기" />

                <Button
                    android:id="@+id/more_button"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="더 보기" />

            </LinearLayout>




        </LinearLayout>
    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>